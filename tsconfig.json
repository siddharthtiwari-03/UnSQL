{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "types",
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    "include": [
        "./*.js",
        "/defs/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}